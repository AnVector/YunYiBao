<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:context="com.anyihao.ayb.frame.activity.DeviceCodeActivity">

    <include layout="@layout/toolbar_common"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:background="@drawable/device_code_bg"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_device_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="51dp"
            android:gravity="center"
            android:textColor="@color/user_account_color"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_device_num_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_device_num"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/device_no"
            android:textColor="@color/user_account_color"
            android:textSize="@dimen/font_size_thirty"/>
    </RelativeLayout>

</LinearLayout>
