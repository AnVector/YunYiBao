<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/device_code_bg"
    tools:context="com.anyihao.ayb.frame.activity.DeviceCodeActivity">

    <include layout="@layout/toolbar_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/board_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_device_num_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:text="@string/device_no"
            android:textColor="@color/user_account_color"
            android:textSize="@dimen/font_size_large_high"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_device_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/user_account_color"
            android:textSize="@dimen/font_size_fif"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
