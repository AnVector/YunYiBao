<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_limited_exchange_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="@string/limited_exchange"
        android:textColor="#020202"
        android:textSize="@dimen/font_size_sev"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_points_exchange"
        android:layout_width="95dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@id/tv_limited_exchange_hint"
        android:layout_below="@id/tv_limited_exchange_hint"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_points_exchange_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_limited_exchange_hint"
        android:layout_below="@id/iv_points_exchange"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#020202"
        android:textSize="@dimen/font_size_normal_high"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_limited_exchange_hint"
        android:layout_below="@id/tv_points_exchange_hint"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#929292"
        android:textSize="@dimen/font_size_small"/>

    <View
        android:id="@+id/line"
        android:layout_width="0.8dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="137dp"
        android:background="@color/line_color"/>

    <ImageView
        android:id="@+id/iv_advertisement"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_alignTop="@id/tv_limited_exchange_hint"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/line"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_advertisement_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_limited_exchange_hint"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/iv_advertisement"
        android:gravity="center"
        android:text="@string/donate_data"
        android:textColor="#020202"
        android:textStyle="bold"/>

    <View
        android:id="@+id/line_right_top"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/iv_advertisement"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/line"
        android:background="@color/line_color"/>

    <ImageView
        android:id="@+id/iv_ticket_left"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@id/iv_advertisement"
        android:layout_below="@id/line_right_top"
        android:layout_marginTop="19dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_ticket_left_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_advertisement"
        android:layout_alignTop="@id/tv_points_exchange_hint"
        android:gravity="center"
        android:textColor="#020202"
        android:textSize="@dimen/font_size_fif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_ticket_left_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_advertisement"
        android:layout_below="@id/tv_ticket_left_hint"
        android:layout_marginTop="11dp"
        android:textColor="#929292"
        android:textSize="@dimen/font_size_small"/>

    <View
        android:id="@+id/line_right_bottom"
        android:layout_width="0.8dp"
        android:layout_height="match_parent"
        android:layout_below="@id/line_right_top"
        android:layout_marginLeft="110dp"
        android:layout_toRightOf="@id/line"
        android:background="@color/line_color"/>

    <ImageView
        android:id="@+id/iv_ticket_right"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_alignTop="@id/iv_ticket_left"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/line_right_bottom"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_ticket_right_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_ticket_right"
        android:layout_alignTop="@id/tv_ticket_left_hint"
        android:gravity="center"
        android:textColor="#020202"
        android:textSize="@dimen/font_size_fif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_ticket_right_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_ticket_right"
        android:layout_alignTop="@id/tv_ticket_left_desc"
        android:gravity="center"
        android:textColor="#929292"
        android:textSize="@dimen/font_size_small"/>
</RelativeLayout>