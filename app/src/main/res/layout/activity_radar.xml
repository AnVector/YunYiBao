<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:context="com.anyihao.ayb.frame.activity.RadarActivity">

    <include layout="@layout/toolbar_common"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="13dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/user_account_color"
            android:textSize="@dimen/font_size_normal"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignLeft="@id/tv_location"
            android:layout_below="@id/tv_location"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/line"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:text="@string/shop"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/font_size_small"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_shop"
            android:layout_marginRight="47dp"
            android:text="@string/contact"
            android:gravity="right|center_vertical"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/font_size_small"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_shop"
            android:layout_below="@id/tv_shop"
            android:layout_marginTop="10dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/font_size_normal_high"/>

        <TextView
            android:id="@+id/tv_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_shop_name"
            android:layout_marginRight="31dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/font_size_normal_high"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/tv_shop_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_register"
            android:gravity="center"
            android:text="@string/call_the_seller"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"/>
    </RelativeLayout>
</LinearLayout>
