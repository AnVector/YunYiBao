<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color"
    android:orientation="vertical"
    tools:context="com.anyihao.ayb.frame.activity.BindDeviceActivity">

    <include
        layout="@layout/toolbar_common"/>

    <com.chaychan.viewlib.PowerfulEditText
        android:id="@+id/input_device_num"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:drawableRight="@drawable/edit_text_selector"
        android:gravity="left|center_vertical"
        android:hint="@string/device_bind_input_hint"
        android:maxLines="1"
        android:padding="15dp"
        android:textColorHint="@color/light_gray"
        android:textCursorDrawable="@drawable/edittext_cursor_color"
        android:textSize="@dimen/font_size_fif"
        app:funcType="canClear"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_register"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_large"/>
</LinearLayout>
