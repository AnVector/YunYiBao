<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:context="com.anyihao.ayb.frame.activity.PayActivity">

    <include
        layout="@layout/toolbar_common"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="left|center_vertical"
        android:background="@color/app_background_color"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/order_details"
        android:textColor="@color/pay_title_text_color"
        android:textSize="@dimen/font_size_thi"/>

    <TextView
        android:id="@+id/tv_pay_amount"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="left|center_horizontal"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/pay_amount"
        android:textColor="@color/user_account_color"
        android:textSize="@dimen/font_size_fif"/>

    <View style="@style/divider_line"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="left|center_horizontal"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/charge_amount"
        android:textColor="@color/user_account_color"
        android:textSize="@dimen/font_size_fif"/>

    <View style="@style/divider_line"/>

    <TextView
        android:id="@+id/tv_validity"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="left|center_horizontal"
        android:background="@color/white"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:text="@string/valid_period"
        android:textColor="@color/user_account_color"
        android:textSize="@dimen/font_size_fif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="left|center_vertical"
        android:background="@color/app_background_color"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/pay_mode"
        android:textColor="@color/pay_title_text_color"
        android:textSize="@dimen/font_size_thi"/>

    <RelativeLayout
        android:id="@+id/rl_ali_pay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="left|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_alipay"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/pay_by_ali_pay"
            android:textColor="@color/user_account_color"
            android:textSize="@dimen/font_size_fif"/>

        <RadioButton
            android:id="@+id/rbt_alipay"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/payment_mode_selector"
            android:button="@null"
            android:checked="true"/>
    </RelativeLayout>

    <View style="@style/divider_line"/>

    <RelativeLayout
        android:id="@+id/rl_wx_pay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="left|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ic_wx_pay"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/pay_by_wx"
            android:textColor="@color/user_account_color"
            android:textSize="@dimen/font_size_fif"/>

        <RadioButton
            android:id="@+id/rbt_wx"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/payment_mode_selector"
            android:button="@null"/>
    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm_to_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_register"
        android:gravity="center"
        android:text="@string/confirm_to_pay"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_large"/>
</LinearLayout>
