<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="105dp"
              android:layout_height="60dp"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/data_flow_item_normal_bg">
    <ImageView
        android:id="@+id/imv_promotion"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_on_sale"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tv_data_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/toolbar_title_color"
        android:textSize="@dimen/font_size_normal_high"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_below="@id/tv_data_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/data_flow_item_price_text_color"
        android:textSize="@dimen/font_size_thi"/>

</RelativeLayout>