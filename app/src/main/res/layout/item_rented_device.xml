<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:textColor="@color/user_account_color"
        android:textSize="@dimen/font_size_normal_high"/>

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_user"
        android:layout_below="@id/tv_user"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/font_size_thi"/>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_user"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="@string/confirm_to_return"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_return"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/font_size_ele"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color"/>

</RelativeLayout>