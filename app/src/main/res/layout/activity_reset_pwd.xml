<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anyihao.ayb.frame.activity.ResetPwdActivity">

    <include
        layout="@layout/toolbar_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_lock"/>

        <View
            android:layout_width="0.6dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@color/line_color"/>

        <com.chaychan.viewlib.PowerfulEditText
            android:id="@+id/edt_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@null"
            android:drawableRight="@drawable/edit_text_selector"
            android:gravity="left|center_vertical"
            android:hint="@string/new_pwd_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textSize="@dimen/font_size_fif"
            app:funcType="canClear"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_lock"/>

        <View
            android:layout_width="0.6dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@color/line_color"/>

        <com.chaychan.viewlib.PowerfulEditText
            android:id="@+id/edt_comfirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@null"
            android:drawableRight="@drawable/edit_text_selector"
            android:gravity="left|center_vertical"
            android:hint="@string/confirm_pwd_input_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textSize="@dimen/font_size_fif"
            app:funcType="canClear"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_register"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_large"/>

</LinearLayout>