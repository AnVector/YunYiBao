<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anyihao.ayb.frame.activity.RedEnvelopeActivity">

    <include layout="@layout/toolbar_common"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_envelope_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="281dp"
            android:layout_height="378dp"
            android:layout_gravity="center"
            android:background="@drawable/red_envelope"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                android:gravity="center"
                android:text="@string/congratulations"
                android:textColor="@color/white"
                android:textSize="19sp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_unfold_it"
                android:layout_width="246dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/open_button_bg"
                android:gravity="center"
                android:text="@string/unfold_it"
                android:textColor="#d20505"
                android:textSize="@dimen/font_size_max"/>
        </LinearLayout>
        <include layout="@layout/envelope_open_layout"/>
    </FrameLayout>
</LinearLayout>
